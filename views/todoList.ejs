<%- include("./partials/header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>


    <!-- Create Unordered List  -->
    <div class="box">

        <!-- For each item in array make a new list element -->
        <% toDoItems.forEach(item=> { %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="itemChecked" value="<%= item._id %>" onChange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
            <% }) %>

                <form class="newItem-form" action="/" method="post">
                    <button type="submit" name="list" value="<%= listTitle %>">+</button>
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off"><br><br>
                </form>
    </div>

    <%- include("./partials/footer"); -%>